<h1 class="text-2xl font-bold mb-4">Articles</h1>
<ul class="flex flex-col gap-2" >
    <% @articles.each do |article| %>
        <li>
            &middot;
            <%= link_to article.title, article, class: "font-bold hover:text-neutral-600" %>
        </li>
    <% end %>

    <%= link_to "New Article", new_article_path, class: "btn-primary mt-4" %>
</ul>