
<div class="flex flex-col gap-2">
    <h1 class="font-bold text-2xl"><%= @article.title %></h1>

    <p><%= @article.body %></p>

    <div class="flex items-center gap-2">
        <%= link_to "Back", root_path, class: "btn-secondary" %>
        <%= link_to "Edit", edit_article_path(@article), class: "btn-primary" %>
        <%= link_to "Destroy", article_path(@article), class: "btn-warn", data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure?"
        } %>
    </div>
</div>